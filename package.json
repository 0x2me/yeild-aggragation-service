{
  "name": "yield-aggregation-service",
  "version": "1.0.0",
  "private": true,
  "description": "Yield Aggregation Service - Multi-chain DeFi yield opportunities",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "build:api": "cd apps/api && pnpm run build",
    "build:web": "cd apps/web && pnpm run build",
    "start:api": "cd apps/api && pnpm run start",
    "start:web": "cd apps/web && npx serve dist",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}